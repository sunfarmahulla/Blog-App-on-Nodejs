<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <%- include ("../partials/message") %>
        <div class="contact-form">
          <h4> <i class="fas fa-user-plus"></i> Register</h4>
          <form action="/users/register" method="POST">
              <div>
                  <span><label>Name</label></span>
                  <span><input 
                    style="width: 100%;"
                    type="name"
                     id="name"
                     name="name" 
                     placeholder="Enter Name" 
                    value="<%= typeof name != 'undefined' ? name : '' %>" /></span>
              </div>
              <div>
                  <span><label>Email</label></span>
                  <span><input 
                    style="width: 100%;"
                    type="email"
                    id="email"
                    name="email"
                    placeholder="Enter Email"
                    value="<%= typeof email != 'undefined' ? email : '' %>" /></span>
              </div>
              <div>
                  <span><label>Password</label></span>
                  <span><input 
                    style="width: 100%;"
                    type="password"
                    id="password"
                    name="password"
                    placeholder="Create Password"
                    value="<%= typeof password != 'undefined' ? password : '' %>" /></span>
              </div>
              <div>
                  <span><label>Confirm Password</label></span>
                  <span><input
                    style="width: 100%;"
                    type="password"
                    id="password2"
                    name="password2"
                    placeholder="Confirm Password"
                    value="<%= typeof password2 != 'undefined' ? password2 : '' %>" /></span>
              </div>
             
              <div>
                  <span><input type="submit" value="Register"></span>
              </div>
          </form>
        
        </div>
      
        <p>Have An Account? <a href="/users/login">Login</a></p>
      </div>
    </div>
  </div>

  	
